pipeline {
    agent any

    stages {
        stage('Clone') {
            steps {
               git credentialsId: 'github-path', url: 'https://github.com/Priyanka-MP/CODTECH-TASK1.git'
            }
        }
        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }
        stage('Deploy') {
            steps {
                sh 'mvn spring-boot:run'
            }
        }
    }
}
